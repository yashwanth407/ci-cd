pipeline {
    agent any

    environment {
        VENV = "venv"
    }

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git branch: 'main', credentialsId: 'github-https', url: 'https://github.com/yashwanth407/ci-cd.git'
            }
        }

        stage('Set Up Python Virtual Environment') {
            steps {
                sh '"/usr/bin/python3" -m venv venv'
                sh './venv/Scripts/python.exe -m pip install --upgrade pip'
                sh './venv/Scripts/pip install flask numpy pandas tensorflow'
            }
        }

        stage('Run Flask App') {
            steps {
                sh './venv/Scripts/python app.py'
            }
        }
    }
}
